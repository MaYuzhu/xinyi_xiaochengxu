page{
  background: #efefef;
}
.wrap{
  padding-top: 10rpx;
}

.item{
  position: relative;
  width: 90%;
  line-height: 60rpx;
  background: #fff;
  margin:30rpx auto;
  border-radius: 10rpx;
  box-shadow: 2px 2px 8px 0px #ccc;
  padding: 0 20rpx;
}
.summary{
  color:#666;
  font-size: 34rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.update_time{
  color:#8a8a8a;
  border-top: 1rpx solid #eee;
  font-size: 26rpx; 
  text-align: right;
}