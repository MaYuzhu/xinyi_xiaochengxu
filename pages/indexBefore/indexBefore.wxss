/* pages/indexBefore/indexBefore.wxss */
page{
  width: 100%;
  height: 100%;
}
.bg{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
}
.bg_img_view{
  position: absolute;
  top:0;
  width: 100%;
  height: 100%;
}

.bg_image{
  display: block;
  width: 100%;
  height: 100%;
}
.content{
  position: absolute;
  z-index: 50;
}

.scroll-x {
  display: flex;
  flex-direction: row; 
}
.scroll-y {
  display: flex;
  flex-direction: column; 
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.item_content{
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  margin: 15rpx 0;
}
.item{
  position: relative;
  width: 100%;
  height: 160rpx;
  background: linear-gradient(to bottom right, #ead994,30%, #fffbfb);
  /* margin-top: 30rpx; */
  border-radius: 10rpx;
  box-shadow: 2px 2px 8px 0px #999999;

}
.item_child1{
  margin: 20rpx 0 0 20rpx;
  color:#666666;
}
.item_child2{
  position: absolute;
  display: flex;
  align-items: center;
  color: #c2c212;
  bottom:30rpx;
  right: 20rpx;
  font-size: 30rpx;
  
}
.bottom_text{
  padding: 50rpx;
  font-size: 30rpx;
  color: #666666;
  text-align: center;
}