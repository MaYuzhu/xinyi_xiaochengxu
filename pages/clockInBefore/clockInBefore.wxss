page{
  width: 100%;
  height: 100%;
}
.bg{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
}
.bg_img_view{
  position: absolute;
  top:0;
  width: 100%;
  height: 100%;
}

.bg_image{
  display: block;
  width: 100%;
  height: 100%;
}
.wrap{
  background: lawngreen;
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item_content{
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  margin: 45rpx 0;
}
.item{
  position: relative;
  width: 100%;
  height: 160rpx;
  background: linear-gradient(to bottom right, #ead994,30%, #fffbfb);
  /* margin-top: 30rpx; */
  border-radius: 20rpx;
  box-shadow: 2px 2px 8px 0px #999999;

}
.item_child1{
  text-align: center;
  line-height: 160rpx;
  font-size: 36rpx;
  font-weight: bold;
  color:#666666;
}