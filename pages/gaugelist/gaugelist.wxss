/* pages/gaugelist/gaugelist.wxss */
page{
  width: 100%;
  height: 100%;
}
.bg{
  background: #f7f7f9;
  min-height: 100%;
}

.swiper-tab{
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    color: #ccc;
    font-size: 14px;
    background: #fff;
    position: fixed;
    z-index: 999;
}
.swiper-tab-item{
    /* width: 30%;  */
    height: 74rpx;
    color:#434343;
}
.active{
    color:#c2c212;
    /* border-bottom: 4rpx solid #F65959; */
    font-size: 14px;
    font-weight: bold;
    border-bottom: 4rpx solid #c2c212;
}
.juzhong{
  margin: 0 auto;
}
.domain{
  background-color: #fff;
  height: 100%;
  margin:0 10px;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.item{
  position: relative;
  width: 90%;
  height: 160rpx;
  background: #fff;
  margin:30rpx auto;
  border-radius: 10rpx;
  box-shadow: 2px 2px 8px 0px #ccc;
  padding: 0 20rpx;
}
.item_child1{
  height: 60%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 34rpx;
  color: #666;
}
.item_child2{
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #8a8a8a;
  font-size: 30rpx;
}
.item_child2_2{
  display: flex;
  align-items: center;
}
.no_content{
  position: absolute;
  width: 200px;
  height: 100px;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
 
}
