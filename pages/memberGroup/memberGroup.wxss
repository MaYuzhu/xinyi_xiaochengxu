


.member{
  margin-bottom: 140rpx;
}
.member_list{
  padding: 10rpx;

}
.member_item{
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #dddddd;
}
.nickname_phone{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.nickname{
  font-size: 32rpx;
  color: #666666;
  padding-left:20rpx; 
}
.phone{
  font-size: 30rpx;
  color: #999999;
  
}

.no_content{
  position: absolute;
  width: 200px;
  height: 100px;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
 
}

.bottom_button{
  position: fixed;
  bottom: 0px;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 140rpx;
  background: #ffffff;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.del_member, .add_member{
  background: #c2c212;
  color: #ffffff;
  padding: 18rpx 80rpx 20rpx;
  border-radius: 80rpx;
  font-size: 32rpx;
}
/* 弹出层 */
.popup_bg{
  background: rgba(0,0,0,.6);
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.popup{
  background: #ffffff;
  width: 70%;
  padding: 60rpx 50rpx 40rpx;
  border-radius: 10rpx;
}
.sousuo{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #c2c212;
  border-radius: 5rpx;
  font-size: 32rpx;
}
.sousuo input{
  padding-left: 20rpx;
  width: 320rpx;
  margin-top: 4rpx;
}
.sousuo view{
  border: 2rpx solid #c2c212;
  background: #c2c212;
  color: #ffffff;
  padding: 1rpx 30rpx 0;
  box-sizing: border-box;
  border-radius: 0 5rpx 5rpx 0;
  height: 80rpx;
  line-height: 76rpx;
  transform: translateX(2rpx);
}
.show_add_info{
  margin: 40rpx 0;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #999999;
}
.bottom_add_true{
  display: flex;
  justify-content: space-between;
}
.bottom_add_true view{
  
  text-align: center;
  background: #c2c212;
  margin: 10rpx 0;
  padding: 20rpx 80rpx;
  color: #ffffff;
  border-radius: 5rpx;
  font-size: 32rpx;
}