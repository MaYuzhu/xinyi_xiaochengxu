.no_content{
  position: absolute;
  width: 200px;
  height: 100px;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.item{
  position: relative;
  width: 90%;
  height: 160rpx;
  background: #fff;
  margin:30rpx auto;
  border-radius: 10rpx;
  box-shadow: 2px 2px 8px 0px #ccc;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.item::before{
  content: '';
  width: 10rpx;
  height: 60rpx;
  background: #c2c212;
  display: block;
  position: absolute;
  left: 0;
  top:50%;
  transform: translate(0,-50%);
}
.item_child1{
  height: 60%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 34rpx;
  color: #666;
}
.item_child2{
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #8a8a8a;
  font-size: 30rpx;
}
.item_child2_2{
  display: flex;
  align-items: center;
}